if [ ! -f cpplint.py ]
then
    wget https://raw.githubusercontent.com/google/styleguide/gh-pages/cpplint/cpplint.py
    chmod +x cpplint.py
fi

./cpplint.py --filter=-readability/streams --linelength=200  src/bloom.h  src/clause.h  src/compar.h  src/formula.h  src/grounder.h  src/intmap.h  src/iter.h  src/literal.h  src/maybe.h  src/print.h  src/setup.h  src/term.h

